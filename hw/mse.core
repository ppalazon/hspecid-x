CAPI=2:
name: uclm:hspecidx:mse:1.0.0
description: Mean Squared Error module for HSpecID-x accelerator

filesets:
  rtl:
    files:
      - src/hsid_pkg/hsid_pkg.sv
      - src/mse/rtl/mse.sv
    file_type: systemVerilogSource
    depend:
      - ">=uclm:hspecidx:sq_df_acc:1.0.0" # sq_df_acc.core

  tb:
    files:
      - src/mse/tb/mse_tb_random.sv
      - src/mse/tb/mse_tb.sv
    file_type: systemVerilogSource

targets:

  default: &default
    filesets:
      - rtl
    toplevel: mse

  sim:
    <<: *default
    description: Simulate hsid with some random data
    default_tool: xsim
    filesets_append:
      - tb
    toplevel: mse_tb
    tools:
      xsim: # https://edalize.readthedocs.io/en/latest/edam/api.html#xsim-backend
        compilation_mode: common
        #xelab_options: 
        #xsim_options: 