CAPI=2:
name: uclm:hspecidx:hsid_pkg:1.0.0
description: HSID package for HSpecID-x accelerator

filesets:
  rtl:
    files:
      - hw/src/hsid_pkg/rtl/hsid_pkg.sv
    file_type: systemVerilogSource

  tb:
    files:
      - hw/src/hsid_pkg/tb/hsid_pkg_tb.sv
    file_type: systemVerilogSource

targets:
  default: &default
    filesets:
      - rtl

  sim:
    <<: *default
    description: Simulate hsid with some random data
    default_tool: xsim
    filesets_append:
      - tb
